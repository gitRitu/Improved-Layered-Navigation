<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Dotsquares_ShopbyPage::css/edit.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Dotsquares\ShopbyPage\Block\Adminhtml\Page\Edit" name="dotsquares_shopbypage_page_edit"/>
            <block class="Dotsquares\ShopbyPage\Block\Adminhtml\Page\Selection" name="dotsquares_shopbypage_page_selection"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Dotsquares\ShopbyPage\Block\Adminhtml\Page\Edit\Tabs" name="dotsquares_shopbypage_page_edit_tabs">

                <block class="Dotsquares\ShopbyPage\Block\Adminhtml\Page\Edit\Tab\Text" name="dotsquares_shopbypage_page_edit_tab_text"/>
                <block class="Dotsquares\ShopbyPage\Block\Adminhtml\Page\Edit\Tab\Meta" name="dotsquares_shopbypage_page_edit_tab_meta"/>
                <block class="Dotsquares\ShopbyPage\Block\Adminhtml\Page\Edit\Tab\Category" name="dotsquares_shopbypage_page_edit_tab_category"/>
                <block class="Dotsquares\ShopbyPage\Block\Adminhtml\Page\Edit\Tab\Selection" name="dotsquares_shopbypage_page_edit_tab_selection"/>

                <action method="addTab">
                    <argument name="name" xsi:type="string">dotsquares_shopbypage_page_edit_tab_text</argument>
                    <argument name="block" xsi:type="string">dotsquares_shopbypage_page_edit_tab_text</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">dotsquares_shopbypage_page_edit_tab_meta</argument>
                    <argument name="block" xsi:type="string">dotsquares_shopbypage_page_edit_tab_meta</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">dotsquares_shopbypage_page_edit_tab_category</argument>
                    <argument name="block" xsi:type="string">dotsquares_shopbypage_page_edit_tab_category</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">dotsquares_shopbypage_page_edit_tab_selection</argument>
                    <argument name="block" xsi:type="string">dotsquares_shopbypage_page_edit_tab_selection</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
